<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.SuaBaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_ngayphathanh"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Tên sản phẩm"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/edt_masanpham"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Mã sản phẩm"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_soluong"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Số lượng"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/edt_dongia"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="đơn giá"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/edt_loaisanpham"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Loại sản phẩm"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sua_bao"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>